<!-- START Dropdown title renamer -->
<div class="btn-group">
  <a href="#" id="title-dropdown" data-toggle="dropdown"><h3 class="board-title-white"><%= board.get('title')%></h3></a>
  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdown-board">
     <li tabindex="-1" href="#" class="dropdown-header"> <big><center>Rename Board</center></big></li>
     <li role="presentation" class="divider"></li>
     <li tabindex="-1" href="#">
       <form id="new-title-form">
         <label><big>Name</label>
         <input id="title-text" type="text" placeholder="<%=board.get('title')%>" name="title">
         <button class="btn btn-success" id="rename-title" type="submit">Rename</button>
       </form>
     </li>
   </ul>
</div>
<br><br>

<!-- END Dropdown title renamer -->

<!-- lists view insertation-->
<div class="container">
  <section class=" col-xs-10 container sortable-list" id="insert-list">
  </section>
  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle"
       data-toggle="dropdown">Add a list...</button>
    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdown-board">
       <li tabindex="-1" href="#" class="dropdown-header"> A shiny new list...</li>
       <li role="presentation" class="divider"></li>
       <li tabindex="-1" href="#">
         <form id="add-list-form">
           <input type="text" name="title">
           <input type="hidden" value="<%= board.id %>" name="board_id">
           <button  id="add-list" class="btn btn-success">Add</button>
         </form>
       </li>
     </ul>
   </div>
  <section class="col-xs-2">
    <div id="insert-sidebar"></div>
  </section>
</div>




<script type="text/javascript">
    $('.dropdown-menu input, .dropdown-menu label').click(function(e) {
        e.stopPropagation();
    });
</script>