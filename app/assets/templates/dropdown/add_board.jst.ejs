<form role="form" id="add-board-form">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" id="title" placeholder="Untitled Board" name="title">

    <label for="organization">Organization</label>
    <select class="form-control">
      <option>App Academy</option>
      <option>Not Trello</option>
      <option>An Organization</option>
      <option>Apple</option>
      <option>Microsoft</option>
    </select>
    <input type="hidden" name="user_id" value="<%=HF.currentUserId%>">
  </div>
  <button id="add-board" type="button" class="btn btn-default">Submit</button>
  <li class="divider"></li>
</form>

